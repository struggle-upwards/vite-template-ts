{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/": [
        "./src/"
      ]
    },
    "moduleResolution": "node",
    "module": "esnext",
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "./src//*.ts",
    "./src//.tsx",
    "./src/**/.vue",
    "./tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}