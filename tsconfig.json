{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "es2015",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsX",
    "src/**/*.Vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types"
  ],
  "exclude": [
    "node_modules"
  ]
}
